<%= form_for(@blog) do |f| %>
	<% if @blog.errors.any? %>
		<div id="errors">
			<h2><%= pluralize(@blog.errors.count, "error") %> prevented this post from saving</h2>
			<ul>
				<% @blog.errors.full_message.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<p>
		<%= f.label :post_title %><br/>
		<%= f.text_field :post_title %>
	</p>
	<p>
		<%= f.label :post_description %><br/>
		<%= f.text_area :post_description %>
	</p>
	<p>
		<%= f.label :post_content %><br/>
		<%= f.text_area :post_content %>
	</p>
	<p>
		<%= f.label :category %><br/>
		<%= f.collection_select :category, Category.order(:category_title), :category_title, include_blank: true %>
	</p>
	<p>
		<%= f.label :post_image %>&nbsp;
		<%= f.file_field :post_image %>
	</p>
	<p>
		<%= f.label :publish %>&nbsp;
		<%= f.check_box :publish %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>